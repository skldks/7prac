        xmlns:local="clr-namespace:_5prac"
        mc:Ignorable="d"
        Title="MainWindow" Height="186" Width="470">
    <Grid Margin="0,0,-163,-169">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black"/>
                <GradientStop Color="Black" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Menu VerticalAlignment="Top" Background="Black" Foreground="White">
            <MenuItem Header="Файл">
                <MenuItem Header="Выход" Click="Close1"></MenuItem>
            </MenuItem>
            <MenuItem Header="О программе" Click="Info">
            </MenuItem>
        </Menu>
        <Button Content="Вычитание пары" HorizontalAlignment="Left" Margin="10,33,0,0" VerticalAlignment="Top" Height="33" Width="120" Background="Black" Foreground="White" BorderBrush="White" Click="subtraction2"/>
        <Button Content="Вычитание тройки" HorizontalAlignment="Left" Margin="10,80,0,0" VerticalAlignment="Top" Height="33" Width="120" BorderBrush="White" Foreground="White" Background="Black" Click="subtraction3"/>
        <TextBox HorizontalAlignment="Center" Margin="0,23,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" x:Name="v1" Foreground="White" BorderBrush="White" Background="Black" SelectionBrush="Black"/>
        <TextBox HorizontalAlignment="Left" Margin="301,23,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" x:Name="v2" Background="Black" BorderBrush="White" Foreground="White" SelectionBrush="Black"/>
        <TextBox HorizontalAlignment="Center" Margin="0,50,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" x:Name="v3" BorderBrush="White" Foreground="White" SelectionBrush="Black" Background="Black"/>
        <TextBox HorizontalAlignment="Left" Margin="301,50,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" x:Name="v4" Background="Black" BorderBrush="White" SelectionBrush="Black" Foreground="White"/>
        <TextBox HorizontalAlignment="Left" Margin="155,123,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" x:Name="result1" Foreground="White" SelectionBrush="Black" Background="Black" BorderBrush="White"/>
        <TextBox HorizontalAlignment="Left" Margin="301,123,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" x:Name="result2" SelectionBrush="Black" Background="Black" BorderBrush="White" Foreground="White"/>
        <Button Content="О программе" HorizontalAlignment="Left" Margin="10,121,0,0" VerticalAlignment="Top" BorderBrush="White" Background="Black" Foreground="White" Click="Button_Click_2"/>
        <Button Content="Выход" HorizontalAlignment="Left" Margin="93,121,0,0" VerticalAlignment="Top" Background="Black" Foreground="White" BorderBrush="White" Click="Button_Click_3"/>
        <TextBox HorizontalAlignment="Center" Margin="0,80,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" x:Name="v5" BorderBrush="White" Foreground="White" SelectionBrush="Black" Background="Black"/>
        <TextBox HorizontalAlignment="Left" Margin="300,80,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" x:Name="v6" Background="Black" BorderBrush="White" SelectionBrush="Black" Foreground="White"/>

    </Grid>
</Window>
